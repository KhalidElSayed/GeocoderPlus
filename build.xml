<project name="GeocoderPlus" default="dist" basedir=".">
   <description>GeocoderPlus Library</description>
   <!-- Setting global properties for this build -->
   <property name="src" location="src" />
   <property name="bin" location="bin" />
 
   <target name="dist">
      <jar destfile="GeocoderPlus.jar" basedir="bin/">
         <!-- Use ** to include the directory recursively -->
         <include name="com/**" />
      </jar>
   </target>
</project>